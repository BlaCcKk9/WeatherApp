<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:background="@android:color/transparent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            <TextView
                    android:id="@+id/nextFiveDayDate"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="24 February"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"/>

            <ImageView
                    android:id="@+id/nextFiveDayIcon"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/nextFiveDayDate"
                    android:src="@drawable/ic_weather"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/nextFiveDayCelsius"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/nextFiveDayIcon"
                    android:layout_centerVertical="true"
                    android:text="25℃"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"/>

            <ImageView
                    android:id="@+id/nextFiveNightIcon"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/ic_weather"
                    android:layout_toEndOf="@+id/nextFiveDayCelsius"
                    android:layout_centerVertical="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/nextFiveNightCelsius"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="25℃"
                    android:layout_toEndOf="@+id/nextFiveNightIcon"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" tools:ignore="HardcodedText"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>